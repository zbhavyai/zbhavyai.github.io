root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js, jsx, ts, tsx}]
indent_size = 2
max_line_length = 200

[*.{json, jsonc}]
max_line_length = off

[*.{yaml, yml}]
indent_size = 2

[*.md]
indent_size = 3
max_line_length = off

[pre-commit]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab
max_line_length = off
