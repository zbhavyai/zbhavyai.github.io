root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*sh]
indent_size = 4

[*java]
max_line_length = 80

[*.{js,jsx,ts,tsx,json,jsonc}]
max_line_length = 200

[*.md]
indent_size = 3
max_line_length = 999

[Makefile]
indent_size = 4
indent_style = tab
